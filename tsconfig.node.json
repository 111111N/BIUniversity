{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}
